---
import { Image } from "astro:assets";

const { href, title, description } = Astro.props;
---

<article class="thumb">
  <a class="image" href={href} >
    <Image src={href} width="1200" height="900" format="webp" alt="Astro Multiverse" />
  </a>
  <h2>{title}</h2>
  <p>{description}</p>
</article>
