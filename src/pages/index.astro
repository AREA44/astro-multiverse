---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import images from "../components/images.json";

let title = "Multiverse by HTML5 UP";
let description =
  "Say hello to Multiverse, a slick, one-page gallery design with a fully functional lightbox.";
---

<!DOCTYPE html>
<html lang="en">
  <BaseHead
    title={title}
    description={description}
    author={"AREA44"}
    og={"og.jpg"}
  />

  <body class="is-preload">
    <div id="wrapper">
      <Header title="Multiverse" />

      <div id="main">
        {
          images.map((img) => (
            <article class="thumb">
              <a class="image" href={img.src}>
                <img
                  src={img.src}
                  width="1200"
                  height="900"
                  alt="Astro Multiverse"
                />
              </a>
              <h2>{title}</h2>
              <p>{description}</p>
            </article>
          ))
        }
      </div>

      <Footer
        title="Multiverse"
        description="Just another fine responsive site template by HTML5 UP"
        tiwtter="#"
        facebook="#"
        instagram="#"
        github="#"
        dribbble="#"
        linkedin="#"
      />
    </div>

    <script is:inline src="js/jquery.min.js"></script>
    <script is:inline src="js/jquery.poptrox.min.js"></script>
    <script is:inline src="js/browser.min.js"></script>
    <script is:inline src="js/breakpoints.min.js"></script>
    <script is:inline src="js/util.js"></script>
    <script is:inline src="js/main.js"></script>
  </body>
</html>
